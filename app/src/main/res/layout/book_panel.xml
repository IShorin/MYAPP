<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:background="@drawable/light_brown_square">

    <ImageView
        android:id="@+id/book_panel_image"
        android:layout_width="138dp"
        android:layout_height="140dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book_100" />

    <TextView
        android:id="@+id/book_panel_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Название"
        android:textColor="@color/grey_yellow"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/book_panel_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_panel_image"
        app:layout_constraintTop_toTopOf="@+id/book_panel_image" />

    <TextView
        android:id="@+id/book_panel_author"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="Автор"
        android:textColor="@color/grey_yellow"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/book_panel_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_panel_image"
        app:layout_constraintTop_toBottomOf="@+id/book_panel_name" />
</androidx.constraintlayout.widget.ConstraintLayout>