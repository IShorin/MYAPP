<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_square"
    app:layout_constraintCircleRadius="50dp">

    <ImageView
        android:id="@+id/book_card_image"
        android:layout_width="140dp"
        android:layout_height="160dp"

        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/book_card_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"

        android:background="@drawable/ripple_srch"
        android:drawableBottom="@drawable/minus_24"
        android:fontFamily="@font/allerta"
        android:textColor="@color/green"

        android:textColorHint="@color/green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_card_name"
        app:layout_constraintVertical_bias="0.49" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_srch"
        android:drawableBottom="@drawable/plus_24"
        android:fontFamily="@font/allerta"

        android:textColor="@color/green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toBottomOf="@+id/book_card_name"
        app:layout_constraintVertical_bias="0.49" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="31dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        android:paddingTop="12dp"
        android:text="0"
        android:textColor="@color/grey_yellow"

        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toBottomOf="@+id/book_card_name"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/book_card_name"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Название книги"
        android:textAlignment="center"

        android:textColor="@color/grey_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_card_image" />

</androidx.constraintlayout.widget.ConstraintLayout>