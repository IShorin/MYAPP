<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/alpha_square"
    app:layout_constraintCircleRadius="30dp">


    <TextView
        android:id="@+id/book_card_name"
        android:layout_width="299dp"
        android:layout_height="21dp"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"

        android:text="Название задачи"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/book_card_name2"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Приоритет"

        android:textAlignment="textStart"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/book_card_name3"
        android:layout_width="141dp"
        android:layout_height="22dp"
        android:gravity="end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"

        android:text="Дата окончания"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <TextView
        android:id="@+id/book_card_name4"
        android:layout_width="132dp"
        android:layout_height="22dp"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"

        android:text="Дата старта"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

</androidx.constraintlayout.widget.ConstraintLayout>